.menu__container
    .menu__container__wrap
        .menu__container__wrap__logo
            h2(class="logo")="osu!memes"
        .menu__container__wrap__menu
            ul.filters
                li
                    a(href='#' id="std") #std
                li
                    a(href='#'  id="mania") #mania
                li
                    a(href='#'  id="ctb") #ctb
                li
                    a(href='#'  id="taiko") #taiko
                li
                    input(type="text" disabled placeholder="search w.i.p.")
            .menu__container__wrap__menu__user
                if userInfo
                    img(src=`https://a.ppy.sh/${userInfo.ingame_id}` alt=`${userInfo.username}_avatar`)
                    h2!=userInfo.username
                    a.menu__auth__button(href='meme/add')
                        ='Add new meme'
                    if userInfo.role > 0
                        p(style='margin-top:25px')
                            a.menu__auth__button(href='admin/meme')
                                ='Admin Panel'
                else
                    a.menu__auth__button(href="login")
                        ="Login with osu!"