mixin meme_item(meme)
    .meme__item(class!=meme.tags)
        if meme.video_id != NULL
            iframe(src=`http://www.youtube.com/embed/${meme.video_id}?controls=0&modestbranding=1` frameborder="0")
        else    
            img(src='/uploads/'+meme.id+'.jpg')
        .details
            span.tag!=meme.tags
            span.pp__counter(meme_id!=meme.id)
                i(class='fab fa-pied-piper-pp')
                .pp__amount
                    =meme.likes
            span.title
                !=meme.meme_title
            span.info
                ='Made by: '
                a(href=`/profile/${meme.author_id}`)
                    !=meme.author_username
        if userInfo && userInfo.role > 0
            form(class="moderation__remove__meme" action="/meme/moderate?_method=PATCH" method="POST" enctype="application/x-www-form-urlencoded")
                input(type="hidden" name="meme_id" value=meme.id)
                button(value="Remove" name="decision" type="submit")
                    i(class="fas fa-trash")